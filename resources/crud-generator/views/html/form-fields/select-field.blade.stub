<select name="%%itemName%%" class="form-control" id="%%itemName%%">
    @foreach (json_decode('%%options%%', true) as $optionKey => $optionValue)


        <option value="{{ $optionKey }}" {{ (isset($%%crudNameSingular%%->%%itemName%%) && $%%crudNameSingular%%->%%itemName%% == $optionKey) ? 'selected' : old('%%itemName%%')}}>{{ htmlLabel(strtolower($optionValue))}}</option>
    @endforeach
</select>